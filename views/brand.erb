<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <img id="rain-boots-green" class="img-responsive" src="/img/rain-boots-green.jpg" alt="an pair of rain boots"/>
    <h1>CRUD/L Shoe Stores Distribution</h1>
    <br>
  </div>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-3">
    <h1>Shoe Brand Name: <%= @brand.brand_name %></h1>
    <h3>Brand details for: <%= @brand.brand_name() %></h3>
    <hr>
    <% if @brand.stores().any?() %>
      <h3>Shoe Stores</h3>
        <ul>
          <% @brand.stores().each() do |store| %>
            <li><%= store.store_name() %></li>
          <% end %>
        </ul>
      <% else %>
        <p>There are no stores for this brand.</p>
      <% end %>
      <br>
    <hr>
    <h3>Available Stores:</h3>
      <% if @stores.any?() %>
        <form action='/brand/<%= @brand.id %>' method="post">
          <input type="hidden" name="_method" value="patch">
          <% @stores.each() do |store|%>
            <div class="checkbox">
              <label>
                <input type="checkbox" name="store_ids[]" value="<%= store.id()%>"><%= store.store_name()%>
              </label>
            </div>
            <% end %>
          <button type="submit">Add store</button>
        </form>
      <% end %>
      <hr>
      <br>
      <h3>Delete Brand</h3>
        <form class="form-group" action="/brand/<%= @brand.id() %>" method="post">
          <input class="form-control" type="hidden" name="_method" value="delete">
          <button class="btn btn-danger" type="submit">Destroy <%= @brand.brand_name() %></button>
        </form>
      <hr>
    <a href="/">Home</a>
  </div>
</div>
